                <ResourceDictionary Source="pack://application:,,,/MotorControl.Commons;component/StyleOverrides/ComboBoxOverrides.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MotorControl.Commons;component/StyleOverrides/SliderOverrides.xaml" />
                <!--<ResourceDictionary Source="pack://application:,,,/MotorControl.Commons;component/StyleOverrides/ToggleButtonOverrides.xaml" />-->

            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
