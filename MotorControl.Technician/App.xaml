                <ResourceDictionary Source="pack://application:,,,/MaterialDesignExtensions;component/Themes/Generic.xaml" />

                <ResourceDictionary Source="pack://application:,,,/MotorControl.Commons;component/StyleOverrides/ToggleButtonOverrides.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MotorControl.Commons;component/StyleOverrides/GeneralOverrides.xaml" />
