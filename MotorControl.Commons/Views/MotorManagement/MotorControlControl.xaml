<UserControl x:Class="MotorControl.Commons.Views.MotorManagement.MotorControlControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MotorControl.Commons.Views.MotorManagement"
             xmlns:common="clr-namespace:MotorControl.Commons.Controls.Common"
             mc:Ignorable="d" 
            d:DesignHeight="160" d:DesignWidth="900">

    <DockPanel>
        <Border Style="{StaticResource MotorControlWhiteBorderStyle}" Margin="5,5,2,5">
            <TextBlock 
                DockPanel.Dock="Left" 
                TextAlignment="Center" 
                VerticalAlignment="Center" 
                FontWeight="Bold" 
                FontSize="18"
                Margin="20,0,20,0" 
                Text="Motor Control" />
        </Border>
        <Border Style="{StaticResource MotorControlWhiteBorderStyle}" Margin="2,5,5,5">
            <!--<TextBlock Text="No Data" HorizontalAlignment="Center" VerticalAlignment="Center" DockPanel.Dock="Right" />-->
            <local:MotorControlManagementPanelControl DockPanel.Dock="Right" />
        </Border>
    </DockPanel>

</UserControl>
