<UserControl x:Class="MotorControl.Commons.Views.ParameterSettings.ParameterFaultResetControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MotorControl.Commons.Views.ParameterSettings"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="300">
    <Grid VerticalAlignment="Center">
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Label Grid.Row="0" Grid.Column="0" 
               Content="Number Of Attempts" />
        
        <ComboBox Grid.Row="0" Grid.Column="1">
            <ComboBoxItem Content="0 (Stop On Fault)" IsSelected="True" />
        </ComboBox>
        
        <Label Grid.Row="1" Grid.Column="0" 
               Content="Reset Delay (seconds)" />

        <ComboBox Grid.Row="1" Grid.Column="1">
            <ComboBoxItem Content="0.0" IsSelected="True" />
        </ComboBox>
    </Grid>

</UserControl>
