<UserControl x:Class="MotorControl.Commons.Controls.Common.MotorControlTextBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MotorControl.Commons.Controls.Common"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <Border 
        Style="{StaticResource MotorControlBorderDefaultStyle}">

    <TextBox
            Margin="0,0,20,0"
            VerticalAlignment="Center" 
            HorizontalAlignment="Right" 
            Text="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorLevel=1, AncestorType=local:MotorControlTextBox}, Path=Text}" />
    </Border>
</UserControl>